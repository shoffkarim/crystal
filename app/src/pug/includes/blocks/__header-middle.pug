  .video-container
    .video-wrapper
      img(src="img/mask.png", alt="alt").mask
      video(preload="" autoplay="autoplay" muted="muted" loop="loop" poster="img/main.png")
        source(src="video/video-main.mp4" type="video/mp4")
  .text-container
    svg(xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" viewBox="0 0 1000 500")
      defs
        mask(id="LetMask")
          rect(
          x="0" y="0"
          width="100%"
          height="100%"
          fill="#black")
          text(
            font-size="300px"
            font-family="serif"
            x="100" y="300"
            fill="white") Text
      image(
        xlink:href="img/background-text-main.png"
        width="100%"
        height="100%"
        mask="url(#LetMask)")
