.popup
  &-overlay
    display: block
    width: 100%
    height 100%
    position fixed
    top: 0
    right: 0
    background-color #0660bf
    z-index 100
    transition all 1s
.popup
  z-index 120
.popup.callback
  width: 860px
  opacity 1
  height: auto
  display: block
  position fixed
  top: 260px
  right: calc(50% - 430px)
  background-color #ffffff
  padding-top 50px
  padding-right: 80px
  padding-bottom 60px
  padding-left: 80px
  transition opacity 0.4s 0.6s, width 0.1s

.callback
  &__heading
    font-family "Inter", sans-serif
    font-weight 700
    font-size 24px
    line-height 44px
    color: #000000
    margin-bottom 10px
    text-align center
  &__text
    text-align center
    .star
      color: #126bc6
  &__form
    margin-top: 45px
  &-bottom
    margin-top 30px
    display: flex
    justify-content: space-between
    align-items: center

.callback-form
  &__container
    display flex
    flex-direction row
    justify-content: space-between
  &__wrapper
    display flex
    flex-direction column
    justify-content: flex-start
    align-items: flex-start
    max-width: 340px
    width: 100%
    input
      background-color #f1f7fd
      border 1px solid #d0e1f4
      padding: 12px 19px
      margin-bottom 20px
      width: 100%
    textarea
      background-color #f1f7fd
      border 1px solid #d0e1f4
      padding: 12px 19px
      width: 100%
      height: 100%
      resize none
  &__block
    position relative
    display block
    width: 100%
    height: 100%
    label
      position absolute
      top: 13px
      left: 20px
      cursor text
      .star
        color #126bc6



.btn-popup__close
  position absolute
  top: -38px;
  right: -39px;
  background-color #0660bf
  opacity 1
  transition: all 0.4s
  &:hover
    opacity 0.6
    transition: all 0.4s
  &--blue
    display: none

.btn-form
  display: block
  background-color #0660bf
  font-family "Inter", sans-serif
  font-weight 700
  font-size 11px
  line-height 29px
  text-transform uppercase
  color: #ffffff
  padding: 10px 40px
  letter-spacing: 1px
  transition all 0.4s
  &:hover
    background-color #2a83dd
    transition all 0.4s
.pd
  a
    color #126bc6
    border-bottom: 1px solid rgba(208, 225, 244, 1)
    transition: all 0.4s
    &:hover
      border-bottom: 1px solid rgba(208, 225, 244, 0)
      transition: all 0.4s

.pd-checkbox
  label
    display: flex
    align-items: center
    justify-content: flex-start
    cursor pointer
  input
    display none
  .fake-checkbox
    display block
    width: 17px
    height: 17px
    border 1px solid #d0e1f4
    background-color #f1f7fd
    position relative
    margin-right 10px
    min-width 17px
    min-height 17px
    max-width 17px
    max-height 17px
    &:before
      content: ""
      background-image url('/app/build/img/checkbox-arrow.png')
      background-repeat no-repeat
      width: 11px
      height 8px
      position absolute
      top: 4px
      left: 2px
      opacity 0
.pd-checkbox input:checked + .fake-checkbox:before
  opacity: 1
.pd-checkbox .error + .fake-checkbox
  border 1px solid #ed1c24
.popup.callback.popup--hidden
  right: 0
  width: 0px
  padding: 0px
  opacity 0
  transition: opacity 0.4s, width 0.3s
.popup-overlay.popup--hidden
  width: 0%
  transition: all 1s
@media screen and (max-width: 1365px)
  .popup.callback
    top: 100px
@media screen and (max-width: 1000px)
  .popup.callback
    width: 720px;
    right: calc(50% - 360px);
  .callback-form__container
    flex-direction column
  .callback-form__wrapper
    max-width: none
    margin-bottom: 20px
  .callback__heading
    font-size 24px
  .callback-bottom
    margin-top: 10px
@media screen and (max-width: 868px)
  .popup.callback
    width: 650px;
    right: calc(50% - 325px);
  .callback-bottom
    flex-direction column
  .btn-form
    margin-top 20px
@media screen and (max-width: 767px)
  .popup.callback
    width: 550px;
    right: calc(50% - 275px);
@media screen and (max-width: 650px)
  .popup.callback-form
    width: 100%;
    right: 0;
    padding: 25px
  .btn-popup__close
    right: 10px
    top: 10px
    background-color: #fff;
  .btn-popup__close--blue
    display: block
  .btn-popup__close--white
    display: none
  .popup.callback.result .btn-popup__close--white
    display: block
    background-color #0660bf
  .popup.callback.result .btn-popup__close--blue
    display: none
  .popup.callback.result
    width: 400px;
    left: calc(50% - 200px);
@media screen and (max-width: 400px)
  .popup.callback-form
    overflow-y scroll
    height: 101vh
    top: 0
  .btn-popup__close--blue
    display: block
  .btn-popup__close--white
    display: none
  .btn-popup__close
    top: 15px;
    right: 15px;
    background-color: #fff;
  .popup.callback.result .btn-popup__close--white
    display: block
    background-color #0660bf
  .popup.callback.result .btn-popup__close--blue
    display: none
  .popup.callback.result
    width: 320px;
    left: calc(50% - 160px);
.callback-form__block input.error
  border 1px solid #ed1c24
.callback-form__block label.common-text.common-text__black
  opacity: 0.5
.callback-form__wrapper .callback-form__block:last-child input
  margin-bottom 0

.popup.callback.result
  width: 450px
  left: calc(50% - 225px)
  background-color #0660bf
  .callback__heading
    color: #fff
  .callback__text
    color: #fff
  .btn-popup__close--white
    display: none
  .btn-popup__close--blue
    display: block
    background-color rgba(255, 255, 255, 0)
@media screen and (max-height: 750px)
  .popup.callback-form
    overflow-y scroll
    height: 101vh
    top: 0
  .btn-popup__close--blue
    display: block
  .btn-popup__close--white
    display: none
  .btn-popup__close
    top: 15px;
    right: 15px;
    background-color: #fff;
  .popup.callback.result .btn-popup__close--white
    display: block
    background-color #0660bf
  .popup.callback.result .btn-popup__close--blue
    display: none

