.company
  padding-top: 105px
  &-heading
    font-size 30px
    line-height: 36px
    color: #ffffff
    max-width 600px
    margin-bottom 25px
  &-text
    max-width: 530px
  .about-section
    padding-left 0
.partners
  margin-top: 180px
  background-color $blue
  padding: 60px
  padding-bottom 70px
  &-heading
    font-family "Inter", sans-serif
    font-weight 700
    font-size 24px
    line-height 30px
    color: #ffffff
    margin-bottom 30px
  &-list
    display: flex
    flex-direction row
    justify-content: flex-start
    width: 100%
    &__item
      display: flex
      flex-direction column
      border-right 1px solid #2f7dcd
      padding-left: 60px
      padding-right: 110px
      &:last-child
        border-right: none
        padding-right 80px
      &:first-child
        padding-left: 0
      img
        min-width 55px
        max-width 55px
        width: 100%
        margin-bottom 15px
