    width: 0%
    height: 100%
    position fixed
    top: 0
    right: 0
    background-color #126bc6
    z-index 100
    transition all 1s
    .info-list, .nav-list
      flex-direction column
      width: 100%
    .header-nav__address, .header-nav__email, .header-nav__tel
      padding: 0
      img
        display none
    .nav-item
