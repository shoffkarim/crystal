.header
  background-color #ffffff
  &-top
    display flex
    flex-direction row
    justify-content: space-between
    &__logo
      padding-top: 40px
      width: 120px
  &__middle
    display: flex
    flex-direction row
    justify-content: center
    margin-top: 35px
    .common-text
      max-width: 590px
.nav
  display: flex
  flex-direction: column
  justify-content: flex-start
  align-items: flex-end
  padding-top: 35px
  &-info
    margin-bottom 30px
    &__list
      display: flex
      flex-direction row
      justify-content: flex-end
  &-menu
    &__list
      display: flex
      flex-direction row
      justify-content: flex-end
  &-item
    common-text()
    margin-right: 30px
    a
      color: #000000

.video
  &-container
    max-width: 730px
    min-width: 730px
    margin-right 40px
  &-wrapper
    margin: 0 auto

.main-h1
  font-family "Inter"
  font-weight 900
  font-size 76px
  color: #000000
  line-height 76px
  margin-bottom 30px
  text-transform uppercase

.header-nav__address,
.header-nav__email,
.header-nav__tel
  padding-left: 25px
  position relative
  img
    width: 15px
    position absolute
    top: 0
    left: 0

.header-nav__email
  span
    text-decoration-line: underline
    text-decoration-color: #333333
    display inline
.header-nav__tel
  font-weight 700
.header-nav__callback
  span
    border-bottom 1px dotted #333333

