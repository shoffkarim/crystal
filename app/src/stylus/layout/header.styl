.header
  background-color #ffffff
  padding-bottom 90px
  min-height: 100vh
  &-top
    display flex
    flex-direction row
    justify-content: space-between
    &__logo
      padding-top: 40px
      width: 120px
  &__middle
    display: flex
    flex-direction row
    justify-content: space-between
    margin-top: 30px
    .common-text
      max-width: 590px
      max-width: 589px;
      margin-left: 100px;
      margin-top: -103px;
.nav
  display: flex
  flex-direction: column
  justify-content: flex-start
  align-items: flex-end
  padding-top: 35px
  &__button
    position: relative;
    width: 33px;
    height: 20px;
    cursor: pointer;
    z-index: 15;
    margin-left: 30px
    display: none
    &-meat
      content: "";
      position: absolute;
      top: 50%;
      right: 0;
      width: 100%;
      height: 2px;
      margin-top: -1px;
      background-color #126bc6
      -webkit-transition: .5s width, .7s background, .5s top, .5s -webkit-transform;
      transition: .5s width, .7s background, .5s top, .5s -webkit-transform;
      transition: .5s width, .7s background, .5s transform, .5s top;
      transition: .5s width, .7s background, .5s transform, .5s top, .5s -webkit-transform;
    &::after
      content: "";
      position: absolute;
      bottom: 0;
      right: 0;
      width: 100%;
      height: 2px;
      background-color #126bc6
      -webkit-transition: .5s width, .7s background, .5s top, .5s -webkit-transform;
      transition: .5s width, .7s background, .5s top, .5s -webkit-transform;
      transition: .5s width, .7s background, .5s transform, .5s top;
      transition: .5s width, .7s background, .5s transform, .5s top, .5s -webkit-transform;
    &::before
      content: "";
      position: absolute;
      top: 0;
      right: 0;
      width: 100%;
      height: 2px;
      background-color #126bc6
      -webkit-transition: .5s width, .7s background, .5s top, .5s -webkit-transform;
      transition: .5s width, .7s background, .5s top, .5s -webkit-transform;
      transition: .5s width, .7s background, .5s transform, .5s top;
      transition: .5s width, .7s background, .5s transform, .5s top, .5s -webkit-transform;

  &-info
    margin-bottom 24px
    display: flex
    &__list
      display: flex
      flex-direction row
      justify-content: flex-end
  &-menu
    &__list
      display: flex
      flex-direction row
      justify-content: flex-end
  &-item
    common-text()
    margin-right: 30px
    &:last-child
      margin-right 0
    .nav-item__href
      color: #000000
      transition all 0.2s
      &:hover
        color: #126bc6
        transition all 0.2s
    &__tel
      margin-right 18px
.nav-item__href.header-nav__address:hover
  color: #000000
.video
  &-container
    max-width: 730px
    min-width: 730px
    margin-right 40px
    position relative
  &-wrapper
    margin: 0 auto
    animation: videoOpening 2s ease-in-out

.main-h1
  font-family "Inter"
  font-weight 900
  font-size 76px
  color: #000000
  line-height 76px
  margin-bottom 30px
  text-transform uppercase

.header-nav__address,
.header-nav__email,
.header-nav__tel
  padding-left: 25px
  position relative
  svg
    position absolute
    top: 3px
    left: 2px
.header-nav__address
  svg
    width: 12px
.header-nav__email
  svg
    width: 14px
.header-nav__tel
  svg
    width: 13px
.header-nav__tel
  font-weight 700
.header-nav__email
  span
    border-bottom 1px solid #333333
    &:hover
      border-bottom 1px solid rgba(0,0,0,0)
      transition all 0.4s
.header-nav__callback
  span
    border-bottom 1px dashed #333333
    &:hover
      border-bottom 1px dashed rgba(0,0,0,0)
      transition all 0.4s

.video-wrapper
  position: absolute;
  width: 715px;
  height: 724px;
  overflow: hidden;
  z-index: 10;
  margin-left: 52px;
  top: 80%;
  left: 50%;
  transform: translate(-50%,-50%);
  video
    position absolute
    width: 100%
    height: 100%
    top: 0
    left: 0
    z-index 5
    object-fit: cover
    -webkit-clip-path: polygon(19.898477% 0%,80.913705% 0%,100% 25.621621%,50% 100%,0% 25.621621%)
    clip-path: polygon(19.898477% 0%,80.913705% 0%,100% 25.621621%,50% 100%,0% 25.621621%)
    position: relative;
  img
    position absolute
    width: 100%
    height: 100%
    top: 0
    left: 0
    z-index 7
    object-fit: cover
.text-container
  margin-right auto
  margin-top: 10px
.text-img
  text-transform: uppercase;
  font-weight: 700;
  z-index 10
.header .container
  position relative
.banner.special-banner
  position fixed
  right: 98px
  bottom: 40px
  display: flex
  flex-direction row
  justify-content: flex-end
  align-items: center
  opacity 1
  transition opacity 2s 0.8s, color 0.4s
  width: 197px
  height: 87px
  img
    position absolute
    top: 0
    right: 0
  &:hover
    .special-banner__text
      color: #0660bf
      transition all 0.4s
    img
      animation: top-down infinite 2s

.special-banner__text
  font-family "Inter", sans-serif
  font-weight 700
  color: #000000
  text-transform uppercase
  max-width 110px
  font-size 11px
  line-height 18px
  margin-top 10px
  margin-right 10px
  letter-spacing: 1px
  transition all 0.4s
  margin-right auto
.cookie
  flex-direction row
  background-color #f1f7fd
  padding 30px 40px
  z-index 100
  display none
  &__open
    position fixed
    bottom: 0px
    left: 0px
    z-index 999
    visibility visible
    display flex
  &__text
    max-width: 440px
  a
    color: #126bc6
    text-decoration underline

.btn-cookie
  font-family "Inter", sans-serif
  font-weight 700
  letter-spacing: 1px
  font-size 11px
  padding: 15px 35px
  text-transform uppercase
  &__disagree
    color: #000000
    background-color #f1f7fd
    border 1px solid #126bc6
    margin-right: 10px
    margin-left: 25px
    padding-left: 28px
    padding-right: 29px
    transition all 0.4s
    &:hover
      background-color #2a83dd
      border 1px solid #2a83dd
      color: #ffffff
      transition: all 0.4s
  &__agree
    color: #ffffff
    background-color #126bc6
    padding-right: 40px
    transition: all 0.4s
    &:hover
      background-color #2a83dd
      transition: all 0.4s
.nav-menu
  .nav-item__href
    position relative
    padding-top 3px
    padding-bottom 3px
    &::before
      content: ""
      background-color #126bc6
      width: 0
      height: 1px
      position absolute
      top: 1px
      left: 0
      transition all 0.4s
    &::after
      content: ""
      background-color #126bc6
      width: 0
      height: 1px
      position absolute
      bottom: 0
      left: 0
      transition all 0.4s
    &:hover
      &::before
        width: 100%
        transition all 0.4s
      &::after
        width: 100%
        transition all 0.4s
.nav-menu .nav-item__href.active:after,
.nav-menu .nav-item__href.active:before
  width: 100%
  transition all 0.4s
.nav-menu .nav-item__href.active
  color: #126bc6;
