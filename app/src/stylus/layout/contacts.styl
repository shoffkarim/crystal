.contacts
  background-color #ffffff
  padding-bottom 60px
  &-wrapper
    padding-top: 82px
  &-heading
    color: #000000
    line-height 56px
    max-width 330px
    margin-bottom 28px
.buildings
  &-list
    display flex
    flex-direction: column
    justify-content: flex-start
    align-items: flex-start
.building
  display flex
  flex-direction: column
  justify-content: flex-start
  align-items: flex-start
  margin-bottom 30px
  max-width: 330px
  &-name
    font-family "Inter", sans-serif
    font-size 15px
    font-weight 700
    text-transform uppercase
    color: #000000
    margin-bottom 10px
  &-address
    margin-bottom 10px
  &-phone
    margin-bottom 5px
    &__wrapper
      display flex
      flex-direction: column
      justify-content: flex-start
      align-items: flex-start
.advantages
  margin-top: 94px
  position relative
  width: 100%
  padding: 45px 60px
  padding-right: 100px
  padding-bottom 110px
  display: flex
  flex-direction row
  justify-content: space-between
  &-back
    position absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    object-fit: cover
    z-index 1
  &-heading
    font-family "Inter", sans-serif
    font-weight 700
    font-size 30px
    line-height 36px
    color: #ffffff
    max-width: 450px
    position relative
    z-index 2
  &-wrapper
    display flex
    flex-direction column
    position relative
    z-index 2
    max-width: 600px
    padding-top: 15px
  &-list
    display: flex
    flex-direction: row
    flex-wrap: wrap
    border-bottom 1px solid #2f7dcd
    padding-bottom 10px
  &-item
    display flex
    flex-direction: row
    margin-bottom 38px
    margin-right 115px
    &:nth-child(2n)
      margin-right 0
    img
      max-width 37px
      max-height: 37px
      width: 100%
      margin-right 20px
    p
      padding-top 5px
      max-width: 160px
  &-main
    padding-top: 45px
    display: flex
    flex-direction row
    img
      width: 33px
      height: 38px
      margin-right 30px
      margin-top: 5px
