.contacts
  background-color #ffffff
  padding-bottom 60px
  &-wrapper
    padding-top: 82px
  &-heading
    color: #000000
    line-height 56px
    max-width 330px
    margin-bottom 28px
.buildings
  &-list
    display flex
    flex-direction: column
    justify-content: flex-start
    align-items: flex-start
.building
  display flex
  flex-direction: column
  justify-content: flex-start
  align-items: flex-start
  margin-bottom 30px
  max-width: 330px
  &-name
    font-family "Inter", sans-serif
    font-size 15px
    font-weight 700
    text-transform uppercase
    color: #000000
    margin-bottom 13px
    letter-spacing: 1.5px
  &-address
    margin-bottom 10px
    position relative
    padding-left 20px
    &::before
      content: ""
      background-image url('/app/build/img/Pin.svg')
      background-repeat no-repeat
      position absolute
      top: 2px
      left: 0
      width: 13px
      height: 15px
  &-phone
    margin-bottom 1px
    &__wrapper
      display flex
      flex-direction: column
      justify-content: flex-start
      align-items: flex-start
      position relative
      padding-left 20px
      &::before
        content: ""
        background-image url('/app/build/img/Phone.svg')
        background-repeat no-repeat
        position absolute
        top: 2px
        left: 0
        width: 13px
        height: 13px
.advantages
  margin-top: 83px
  position relative
  width: 100%
  padding: 45px 60px
  padding-right: 100px
  padding-bottom 110px
  display: flex
  flex-direction row
  justify-content: space-between
  z-index 20
  &-back
    position absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    object-fit: cover
    z-index 1
  &-heading
    font-family "Inter", sans-serif
    font-weight 700
    font-size 30px
    line-height 36px
    color: #ffffff
    max-width: 450px
    position relative
    z-index 2
  &-wrapper
    display flex
    flex-direction column
    position relative
    z-index 2
    max-width: 600px
    padding-top: 15px
  &-list
    display: flex
    flex-direction: row
    flex-wrap: wrap
    border-bottom 1px solid #2f7dcd
    padding-bottom 10px
  &-item
    display flex
    flex-direction: row
    margin-bottom 38px
    margin-right 115px
    &:nth-child(2n)
      margin-right 0
    img
      max-width 37px
      max-height: 37px
      width: 100%
      margin-right 20px
    p
      padding-top 5px
      max-width: 160px
  &-main
    padding-top: 45px
    display: flex
    flex-direction row
    img
      width: 33px
      height: 38px
      margin-right 30px
      margin-top: 5px
.map-container
  width: 100%
  height: 100%
  position relative
.map-wrapper
  position: absolute
  width: 100%
  height: 909px
  overflow: hidden
  z-index: 10
  top: 0
.map-wrapper .mask
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 7;
  object-fit: cover;
.map
  position absolute
  top: 0;
  right: 0px;
  z-index: 5;
  object-fit: cover;
  -webkit-clip-path: polygon(19.898477% 0%,80.913705% 0%,100% 25.621621%,50% 100%,0% 25.621621%)
  clip-path: polygon(19.898477% 0%,80.913705% 0%,100% 25.621621%,50% 100%,0% 25.621621%)
  position: relative;
  width: 985px;
  height: 925px;
  background: $blue
  margin-left auto
.ymaps-2-1-77-controls__control
  left: 110px !important
  top: 142px !important
.ymaps-2-1-77-controls__toolbar
  width: 62% !important
  left: 188px !important
.ymaps-2-1-77-image-with-content-content
  font-family "Inter", sans-serif !important
  color: #ffffff !important
  font-weight 700 !important
  font-size 11px !important
  line-height 14px !important
  text-transform uppercase !important
  text-align: center !important
.ymaps-2-1-77-balloon
  box-shadow none !important
.ymaps-2-1-77-balloon__layout
  background inherit !important
.ymaps-2-1-77-balloon__close
  display none !important
.ymaps-2-1-77-balloon__content
  padding: 0 !important
  background: rgba(255,255,255,0) !important
.ymaps-2-1-77-balloon__tail
  display none
.balloon-img
  border-radius 50%
  width: 230px
  height: 230px
  overflow hidden
  img
    width: 230px
    height: 230px
    object-fit: cover
