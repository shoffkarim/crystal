.about-section
  position relative
  padding-left 100px
  margin-top: 65px
  img
    position absolute
    top: 0
    left: 0
.section-top
  display flex
  flex-direction row
  justify-content: space-between
.catalog
  padding-top: 182px
  opacity 1
  transition: all 1s
  &-heading
    color: #ffffff
    margin-bottom 27px
  &-text
    max-width: 480px
  &-block
    margin-top: 227px
  &-list
    background-color $blue
    display flex
    flex-direction row
    justify-content: space-between
    flex-wrap: wrap
  &-item
    min-width: 475px
    display: flex
    flex-direction row
    justify-content: center
    align-items: center
    text-align center
    padding: 69px 160px
    border-bottom 1px solid #2f7dcd
    border-right 1px solid #2f7dcd
    &:nth-child(4)
      min-width 50%
    &:nth-child(5)
      min-width 50%

.curcle-link
  width: 268px
  height: 268px
  display flex
  flex-direction column
  align-items: center
  border-radius 50%
  background-color $blue
  padding-top: 99px
  transition: all 0.4s
  position absolute
  top: 0
  right: 0
  span
    font-family "Inter", sans-serif
    font-weight 700
    font-size 11px
    color: #ffffff
    text-transform uppercase
    letter-spacing: 1px
  &__href
    color: #ffffff
    border-bottom 1px solid #ffffff
    margin-bottom 7px
    letter-spacing: 1px
    transition all 0.4s
    .underline
      line-height 10px
  &:hover
    background-color #2a83dd
    width: 300px
    height: 300px
    top: -15px
    right: -19px
    padding-top 114px
    transition: all 0.4s
    .curcle-link__href
      border-bottom 1px solid rgba(255,255,255,0)
      transition all 0.4s

.arrow
  margin-top: 18px
.catalog .container
  position relative

.catalog-block .catalog-item__href
  position relative
  &::before
    content: ""
    background-image url('/app/build/img/arrow-white.png')
    background-repeat no-repeat
    width: 43px
    height: 14px
    position absolute
    top: 35px
    left: calc(50% - 21px)
    opacity 0
    transition: all 0.6s

.catalog-item
  position relative
.catalog-item__href-outer
  position absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  overflow hidden
  &:before
    content: ""
    background-color $blue
    width: 500px
    height: 500px
    border-radius 50%
    position: absolute
    top: -270px
    right: -325px
    transition: background-color 1s, width 1.5s, height 1.5s, top 1.5s, right 1.5s
  &:hover
    &:before
      background-color #2a83dd
      width: 940px;
      height: 900px;
      top: -170px;
      right: -105px;
      transition: background-color 1s, width 1.5s, height 1.5s, top 1.5s, right 1.5s
  &:hover + .catalog-item__href::before
    opacity 1
    transition: all 0.6s
@media screen and (max-width: 1550px)
  .catalog
    padding-top: 84px
  .curcle-link
    width: 228px
    height: 228px
    padding-top: 79px
    top: 20px
  .catalog-block
    margin-top: 120px
  .catalog-item
    min-width auto
    padding: 54px 142px
@media screen and (max-width: 1365px)
  .catalog-item:nth-child(5)
    min-width 100%
  .catalog-item:nth-child(4)
    min-width 100%
  .catalog-item
    min-width 100%
@media screen and (max-width: 868px)
  .catalog-text
    max-width: 330px;

@media screen and (max-width: 767px)
  .curcle-link
    position relative
@media screen and (max-width: 450px)
  .catalog-text
    max-width: none